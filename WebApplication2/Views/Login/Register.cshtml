@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/css/style.css" type="text/css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Сайт для голосования</title>
</head>
<body>

    <div class="header">
        <div class="container-header">
            <h1 class="title">Регистрация организатора</h1>
        </div>
    </div>

    <div class="container-cp">
        @using (Html.BeginForm("RegisterPost", "Login", FormMethod.Post))
        {
            <div class="form-group">
                <label>ФИО: </label>
                <input name="name" type="text" value="" required>
            </div>
            <div class="form-group">
                <label>Логин: </label>
                <input name="login" type="text" value="" required>
            </div>
            <div class="form-group">
                <label>Почта(необязательно): </label>
                <input name="email" type="text">
            </div>
            <div class="form-group">
                <label>Пароль: </label>
                <input id="passwordFieldFirst" name="password" type="password" required>
            </div>
            <div class="form-group">
                <label>Повторите пароль: </label>
                <input id="passwordFieldSecond" type="password" required>
            </div>
            <input id="submitButton" type="button" class="login-button" value="Зарегистрироваться"/>
        }
    </div>

    <div class="footer">
        <p></p>
    </div>
</body>
</html>


<script src="@Url.Content("~/lib/jquery/dist/jquery.js")" type="text/javascript"></script>
<script>
    const passwordFieldFirst = document.getElementById('passwordFieldFirst');
    const passwordFieldSecond = document.getElementById('passwordFieldSecond');
    const submitButton = document.getElementById('submitButton');

    passwordFieldFirst.addEventListener("change", (event) => {
        if (passwordFieldFirst.value.length < 6 || (passwordFieldFirst.value !== passwordFieldSecond.value)) {
            submitButton.setAttribute("type", "button")
        }
        else {
            submitButton.setAttribute("type", "submit")
        }
    });

    passwordFieldSecond.addEventListener("change", (event) => {
        if (passwordFieldSecond.value.length < 6 || (passwordFieldFirst.value !== passwordFieldSecond.value)) {
            submitButton.setAttribute("type", "button")
        }
        else {
            submitButton.setAttribute("type", "submit")
        }
    });

</script>