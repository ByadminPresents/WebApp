@model Tuple<string, List<double>, Dictionary<int, string>>
<script>
    var criteriaNames = []
    var criteriaValues = []
    @{
        foreach (var str in Model.Item3)
        {
            @:criteriaNames.push('@str.Value')
        }
        foreach (var value in Model.Item2)
        {
            @:criteriaValues.push(parseFloat('@value.ToString().Replace(',', '.')'))
        }
    }

        var project = {
        data: criteriaValues,
        backgroundColor: [
            'rgba(255, 99, 132, 0.2)',
            'rgba(54, 162, 235, 0.2)',
            'rgba(255, 206, 86, 0.2)',
            'rgba(75, 192, 192, 0.2)',
            'rgba(153, 102, 255, 0.2)',
            'rgba(255, 159, 64, 0.2)'
        ],
        borderColor: [
            'rgba(255, 99, 132, 1)',
            'rgba(54, 162, 235, 1)',
            'rgba(255, 206, 86, 1)',
            'rgba(75, 192, 192, 1)',
            'rgba(153, 102, 255, 1)',
            'rgba(255, 159, 64, 1)'
        ],
        borderWidth: 1,
        lineTension: 0,
    };

    var diagramOptions = {
        indexAxis: 'x',
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                display: false
            }
        },
        scales: {
            y: {
                min: 0,
                max: 5,
                ticks: {
                    font: {
                        size: 18
                    },
                    stepSize: 1
                }
            },
            x: {
                ticks: {
                    font: {
                        size: 16
                    }
                }
            }
        }
    }

    var verticalBarChart = new Chart(
        document.getElementById('@Model.Item1').getContext('2d'), {
        type: 'bar',
        data: {
            labels: criteriaNames,
            datasets: [project]
        },
        options: diagramOptions
    });
</script>