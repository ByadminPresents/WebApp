@model VotingEvent
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/css/style.css" type="text/css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Сайт для голосования</title>
</head>
<body>

    <div class="header">
        <div class="container-header">
            <a href="../VotingEvents/VotingEventsList" class="back-arrow">&#8592;</a>
            <h1 class="title">Создать новую конференцию</h1>
        </div>
    </div>

    <div class="container-cp">
        <form asp-action="VotingEventCreate" method="post">
            <label asp-for="Name"></label>
            <div class="form-group">
                <label for="eventName">Название конференции:</label>
                <input asp-for="Name" required>
                <span asp-validation-for="Name"></span>
            </div>
            <label asp-for="Description"></label>
            <div class="form-group">
                <label for="description">Тема:</label>
                <input asp-for="Description" required>
                <span asp-validation-for="Description"></span>
            </div>
            <label asp-for="Location"></label>
            <div class="form-group">
                <label for="Location">Место проведения:</label>
                <input asp-for="Location" required>
                <span asp-validation-for="Location"></span>
            </div>
            <label asp-for="Datetime"></label>
            <div class="form-group">
                <label for="Datetime">Время проведения:</label>
                <input asp-for="Datetime" required>
                <span asp-validation-for="Datetime"></span>
            </div>
@*             <div class="form-group">
                <label for="eventName">Название конференции:</label>
                <input asp-for="Description" type="datetime-local" required>
                <span asp-validation-for="Name"></span>
            </div>

            <div class="form-group">
                <label for="description">Тема:</label>
                <input type="text" id="description" name="description" required>
            </div>

            <div class="form-group">
                <label for="venue">Место проведения:</label>
                <input type="text" id="venue" name="venue" required>
            </div>

            <div class="form-group">
                <label for="time">Время проведения:</label>
                <input type="datetime-local" id="datetime" name="datetime" required>
            </div> *@
            <input type="submit" value="Создать конференцию" />
        </form>
    </div>

    <div class="footer">
        <p></p>
    </div>

</body>
</html>
