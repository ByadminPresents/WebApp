@model List<Viewer>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/css/style.css" type="text/css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Сайт для голосования</title>
</head>
<body>
    <div class="header">
        <div class="container-header">
            <a href="../VotingEvents/VotingEventEdit?votingEventId=@ViewData["votingEventId"]" class="back-arrow">&#8592;</a>
            <h1 class="title">Редактирование зрителей</h1>
        </div>
    </div>
    <div class="container-cp">
        @using (Html.BeginForm("UpdateViewers", "Viewers", FormMethod.Post))
        {
            <input type="submit" value="Сохранить изменения" />
            <input type="hidden" name="votingEventId" value="@ViewData["votingEventId"]" class="form-control" />
            <table>
                <thead>
                    <tr>
                        <th></th>
                        <th>Name</th>
                        <th>email</th>
                    </tr>
                </thead>
                @{
                    int elementsCount = 0;
                    if (Model.Count > 0)
                    {
                        elementsCount = Model.Count - 1;
                    }
                    <tbody id="ViewersList" data-count="@elementsCount">
                        @{
                            int count = 0;
                            foreach (var viewer in Model)
                            {
                                <tr id="element-@count">
                                    <td><input type="hidden" name="viewers[@count].Id" value="@viewer.Id" class="form-control" /></td>
                                    <td><input type="text" name="viewers[@count].Name" value="@viewer.Name" class="form-control" required /></td>
                                    <td><input type="text" name="viewers[@count].Email.EmailValue" value="@viewer.Email.EmailValue" class="form-control" required /></td>
                                    <td><button type="button" class="btn" onclick="DeleteRow(@count)">X</button></td>
                                </tr>
                                count++;
                            }
                            if (Model.Count == 0)
                            {
                                <tr id="element-0">
                                    <td><input type="hidden" name="viewers[0].Id" class="form-control" /></td>
                                    <td><input type="text" name="viewers[0].Name" class="form-control" required /></td>
                                    <td><input type="text" name="viewers[0].Email.EmailValue" class="form-control" required /></td>
                                    <td><button type="button" class="btn" onclick="DeleteRow(0)">X</button></td>
                                </tr>
                            }
                        }
                    </tbody>
                }
            </table>
            <button type="button" class="btn" onclick="AddRow()" id="addRowButton" formnovalidate="formnovalidate">Добавить зрителя</button>
        }
    </div>
</body>

<script src="@Url.Content("~/lib/jquery/dist/jquery.js")" type="text/javascript"></script>
<script>
    function AddRow() {
        var countVal = parseInt($('#ViewersList').attr('data-count'));
        countVal += 1;
        var html = '';
        html += '<tr>';
        html += '<td><input type="hidden" name="viewers[' + countVal + '].Id" class="form-control" required/></td>';
        html += '<td><input type="text" name="viewers[' + countVal + '].Name" class="form-control" required/></td>';
        html += '<td><input type="text" name="viewers[' + countVal + '].Email.EmailValue" class="form-control" required/></td>';
        html += '</tr>';
        $('#ViewersList').append(html);
        $('#ViewersList').attr('data-count', countVal);
    }
    function DeleteRow(id) {
        var countVal = parseInt($('#ViewersList').attr('data-count'));
        $('#element-' + id).remove()
        for (i = id + 1; i < countVal + 1; i++) {
            $('#element-' + i).id = '#element-' + i - 1'
        }
    }
</script>
